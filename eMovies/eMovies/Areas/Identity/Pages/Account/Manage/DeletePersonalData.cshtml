@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h1 class="text-center text-white">@ViewData["Title"]</h1>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card p-4 shadow-lg rounded bg-dark text-white">
            <div class="alert alert-warning" role="alert">
                <p>
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
            </div>
            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                @if (Model.RequirePassword)
                {
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label text-black">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }
                <button class="w-100 btn btn-lg btn-danger" type="submit">Delete data and close my account</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        setTimeout(function () {
            let alertElement = document.querySelector(".alert-dismissible");
            if (alertElement) {
                let bsAlert = new bootstrap.Alert(alertElement);
                bsAlert.close();
            }
        }, 5000);
    </script>
}
