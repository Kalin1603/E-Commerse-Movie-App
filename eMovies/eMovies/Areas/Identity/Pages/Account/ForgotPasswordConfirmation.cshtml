@page
@model eMovies.Areas.Identity.Pages.Account.ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card p-4 shadow-sm bg-dark text-white">
            <h2 class="text-center">Please check your email to reset your password.</h2>
            <div class="text-center mt-3">
                <a asp-page="/Account/Login" class="btn btn-secondary">Back to Login</a>
            </div>
        </div>
    </div>
</div>