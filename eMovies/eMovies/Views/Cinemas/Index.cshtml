@model IEnumerable<eMovies.Models.Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<body style="height: 100vh; overflow-y: auto; padding: 20px; font-family: Arial, sans-serif;">

    <div class="text-center mb-4">
        <h1 class="display-4" class="display-4" style="text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5); color: black">List of all Cinemas</h1>
        <p>
            <a asp-action="Create" class="btn btn-primary btn-lg">Create New</a>
        </p>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered" style="table-layout: fixed; width: 100%; word-wrap: break-word;">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th style="max-width: 60px; text-overflow: ellipsis; overflow: hidden;">@Html.DisplayNameFor(model => model.Logo)</th>
                    <th style="max-width: 100px; text-overflow: ellipsis; overflow: hidden;">@Html.DisplayNameFor(model => model.Name)</th>
                    <th style="max-width: 150px; text-overflow: ellipsis; overflow: hidden;">@Html.DisplayNameFor(model => model.Description)</th>
                    <th style="max-width: 120px; text-overflow: ellipsis; overflow: hidden;">@Html.DisplayNameFor(model => model.Location)</th>
                    <th style="max-width: 140px; text-overflow: ellipsis; overflow: hidden;">@Html.DisplayNameFor(model => model.ContactEmail)</th>
                    <th style="max-width: 120px; text-overflow: ellipsis; overflow: hidden;">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                    <th style="max-width: 100px; text-overflow: ellipsis; overflow: hidden;">@Html.DisplayNameFor(model => model.OpeningHours)</th>
                    <th style="max-width: 60px; text-overflow: ellipsis; overflow: hidden;">@Html.DisplayNameFor(model => model.Capacity)</th>
                    <th style="max-width: 150px; text-overflow: ellipsis; overflow: hidden;">@Html.DisplayNameFor(model => model.Website)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle" style="max-width: 60px; padding: 5px;">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 60px; max-height: 60px;" />
                        </td>
                        <td class="align-middle" style="max-width: 100px; padding: 5px;">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle" style="max-width: 150px; padding: 5px;">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle" style="max-width: 120px; padding: 5px;">
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td class="align-middle" style="max-width: 140px; padding: 5px;">
                            @Html.DisplayFor(modelItem => item.ContactEmail)
                        </td>
                        <td class="align-middle" style="max-width: 120px; padding: 5px;">
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td class="align-middle" style="max-width: 100px; padding: 5px;">
                            @Html.DisplayFor(modelItem => item.OpeningHours)
                        </td>
                        <td class="align-middle" style="max-width: 60px; padding: 5px;">
                            @Html.DisplayFor(modelItem => item.Capacity)
                        </td>
                        <td class="align-middle" style="max-width: 150px; padding: 5px;">
                            @Html.DisplayFor(modelItem => item.Website)
                        </td>
                        <td class="align-middle text-center" style="padding: 5px;">
                            <span style="display: inline-flex; align-items: center; gap: 5px;">
                                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
