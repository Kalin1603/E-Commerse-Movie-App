@model IEnumerable<eMovies.Models.Actor>
@{
    ViewData["Title"] = "List of Actors";
}

<div class="container py-4">
    <div class="text-center mb-4">
        <h1 class="display-4" style="color: #343a40; font-weight: bold;">List of Actors</h1>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-lg border-0 rounded-3" style="height: 100%;">
                    <img class="card-img-top" src="@item.ProfilePictureURL" alt="@item.FirstName @item.LastName" style="object-fit: cover; height: 350px; border-radius: 10px;">
                    <div class="card-body" style="flex-grow: 1;">
                        <h5 class="card-title text-info">@item.FirstName @item.LastName</h5>
                        <p class="card-text">@item.Bio</p>
                    </div>
                    <div class="card-footer text-center" style="background-color: #f8f9fa;">
                        <div class="d-flex justify-content-center gap-3">
                            <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="position-fixed" style="right: 25px; bottom: 25px;">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success btn-lg d-flex align-items-center gap-2 ">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>