@model eMovies.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
<div class="row text">
    <div class="col-md-8 offset-2">
        <h1 class="display-4 text-center">Delete confirmation for: @Model.FirstName @Model.LastName</h1>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center d-flex justify-content-center">
                    <img id="ProfilePicturePreview" src="#" alt="Preview"
                         style="max-width: 250px; max-height: 350px; object-fit: cover; border-radius: 10px;" />
                </div>


                <div class="form-group">
                    <label asp-for="ProfilePictureURL" class="control-label"></label>
                    <input asp-for="ProfilePictureURL" class="form-control" readonly />
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" readonly />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" readonly />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group" style="padding-top: 20px">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger float-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            var imageUrl = document.getElementById('ProfilePictureURL').value;

            if (imageUrl) {
                output.src = imageUrl;
                output.style.display = 'block';
            } else {
                output.style.display = 'none';
            }
        });
    </script>
}
