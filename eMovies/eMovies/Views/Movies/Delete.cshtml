@model eMovies.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card p-4 shadow-lg rounded bg-dark text-white">
            <div class="alert alert-warning" role="alert">
                <p>
                    <strong>Are you sure you want to delete this movie? This action cannot be undone.</strong>
                </p>
            </div>
            <div class="text-center mb-3">
                <img src="@Model.MovieImageURL" alt="@Model.Title" class="img-fluid rounded" style="max-width: 250px; max-height: 350px; object-fit: cover;" />
                <h4 class="mt-3">@Model.Title</h4>
            </div>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button class="w-100 btn btn-lg btn-danger" type="submit">Delete</button>
                <a class="w-100 btn btn-lg btn-secondary mt-2" asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        setTimeout(function () {
            let alertElement = document.querySelector(".alert-dismissible");
            if (alertElement) {
                let bsAlert = new bootstrap.Alert(alertElement);
                bsAlert.close();
            }
        }, 5000);
    </script>
}